@{
    ViewBag.Title = "Logout";
}

<div class="row">
    <form id="frm">
        <div>
            <p>
                Are you shoure?<br />
                <div><input type="submit" class="btn btn-outline-dark" value="Logout" /></div>
            </p>
        </div>
    </form>
</div>


@section scripts{

    <script>
    $(document).ready(function () {
        $("#frm").submit(function (e) {
            e.preventDefault();

            url = "@Url.Content("~/Logout/LogoutSend")"
            parametros = $(this).serialize();

            $.post(url, parametros, function (data) {
                if (data == "1") {
                    document.location.href = "@Url.Content("~/Home")";
                } else {
                    alert(data)
                }
            })
        })

    })
    </script>
}