@model CMS02.Models.DocumentUploadViewModel

@{
    ViewData["Title"] = "Upload";
}

<h1>Upload</h1>

@using (Html.BeginForm("UploadSend", "Profile", FormMethod.Post,
    new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken();
    <div class="row">
        <div class="col-md-6 col-lg-3">
            <div class="form-group">
                <p>
                    @Html.LabelFor(d => d.FileToUpload)
                    <br />
                    @Html.TextBoxFor(d => d.FileToUpload, new { type = "file" })
                    @Html.ValidationMessageFor(d => d.FileToUpload, "", new { @class = "text-danger" })
                </p>
            </div>
            <div class="form-group">
                <p>
                    @Html.LabelFor(d => d.Document.Name)
                    <br />
                    @Html.TextBoxFor(d => d.Document.Name, new { type = "form-control" })
                    @Html.ValidationMessageFor(d => d.Document.Name, "", new { @class = "text-danger" })
                </p>
            </div>
            <div class="form-group">
                <p>
                    @Html.LabelFor(d => d.Document.Description)
                    <br />
                    @Html.TextBoxFor(d => d.Document.Description, new { type = "form-control" })
                    @Html.ValidationMessageFor(d => d.Document.Description, "", new { @class = "text-danger" })
                </p>
            </div>
            <div class="form-group">
                <p>
                    @Html.LabelFor(d => d.Document.ShowDescription)
                    <br />
                    @Html.CheckBoxFor(d => d.Document.ShowDescription, new { type = "checkbox" })
                    @Html.ValidationMessageFor(d => d.Document.ShowDescription, "", new { @class = "text-danger" })
                </p>
            </div>
            <div class="form-group">
                <p>
                    @Html.LabelFor(d => d.Document.Public)
                    <br />
                    @Html.CheckBoxFor(d => d.Document.Public, new { type = "checkbox" })
                    @Html.ValidationMessageFor(d => d.Document.Public, "", new { @class = "text-danger" })
                </p>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-outline-dark" value="UploadSend">Upload</button>
            </div>
        </div>
    </div>
}

@if (ViewBag.Mensaje != "1")
{
    <script>alert("@ViewBag.Mensaje");</script>
}