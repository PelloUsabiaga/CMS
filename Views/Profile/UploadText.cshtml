@model CMS02.Models.DocumentUploadViewModel

@{
    ViewData["Title"] = "Upload new Text";
}

<h1>Upload</h1>

@using (Html.BeginForm("TextUploadSend", "Profile", FormMethod.Post,
    new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken();
    <div class="row">
        <div class="col-md-6 col-lg-3">
            <div class="form-group">
                <p>
                    @Html.Label("Text:")
                    <br />
                    @Html.TextAreaFor(d => d.Document.Description, new { type = "form-control", rows = "4", cols = "50" })
                    @Html.ValidationMessageFor(d => d.Document.Description, "", new { @class = "text-danger" })
                </p>
            </div>
            <div class="form-group">
                <p>
                    @Html.LabelFor(d => d.Document.Public)
                    <br />
                    @Html.CheckBoxFor(d => d.Document.Public, new { type = "checkbox" })
                    @Html.ValidationMessageFor(d => d.Document.Public, "", new { @class = "text-danger" })
                </p>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-outline-dark" value="TextUploadSend">Upload</button>
            </div>
        </div>
    </div>
}

@if (ViewBag.Mensaje != "1")
{
    <script>alert("@ViewBag.Mensaje");</script>
}